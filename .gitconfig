[color]
  ui = auto
[core]
  editor = nvim
  excludesfile = ~/.gitignore_global
[init]
	defaultBranch = main
[alias]
	stall = stash --all
[includeIf "gitdir:~/git/hpe/"]
  path = ~/git/hpe/.gitconfig
[rebase]
	updateRefs = true
[diff "ansible-vault"]
	textconv = ansible-vault view
[status]
	submoduleSummary = true
