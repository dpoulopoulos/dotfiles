[user]
  name = Dimitris Poulopoulos
  email = dimitris.a.poulopoulos@gmail.com
  signingkey = 76E7CE1D63EE16C9
[color]
  ui = auto
[core]
  editor = nvim
  pager = delta
  excludesfile = ~/.gitignore_global
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true
  side-by-side = true
[diff]
  colorMoved = default
[merge]
  confictstyle = diff3
[init]
	defaultBranch = main
[alias]
	stall = stash --all
[includeIf "gitdir:~/git/hpe/"]
  path = ~/git/hpe/.gitconfig
[rebase]
	updateRefs = true
[diff "ansible-vault"]
	textconv = ansible-vault view
[status]
	submoduleSummary = true
